<script>
    function openModal(role) {
        const title = document.getElementById('join-title');
        const select = document.getElementById('join-role');
        
        // Update Title based on role for UX
        if(role === 'Tech') title.innerText = "Tech Steward Application";
        if(role === 'Legal') title.innerText = "Legal Steward Application";
        if(role === 'Transporter') title.innerText = "Transporter Application";
        if(role === 'Builder') title.innerText = "Builder Application";
        if(role === 'Mechanic') title.innerText = "Mechanic Application";
        if(role === 'Accountant') title.innerText = "Accountant Application";
        if(role === 'Lawyer') title.innerText = "Lawyer (Natural Law) Application";
        if(role === 'Farmer') title.innerText = "Organic Farmer Application";
        if(role === 'Volunteer') title.innerText = "Volunteer Application";
        if(role === 'Auto') title.innerText = "Home & Industrial Automation Application";
        if(role === 'Delivery') title.innerText = "Delivery Specialist Application";

        select.value = role;
        document.getElementById('modal-join').classList.add('open');
    }

    function closeModal(id) { document.getElementById(id).classList.remove('open'); }

    function processJoin(e) {
        e.preventDefault();
        const name = document.getElementById('join-name').value;
        const role = document.getElementById('join-role').value;
        
        if(!name) { alert("Please fill in Name."); return; }

        // Simulation
        alert(`Application Received for ${role}: ${name}. Welcome to Family.`);
        closeModal('modal-join');
        // In a real app, this sends data to backend.
    }
</script>
